<section class ="flex flex-col items-center py-10">
<%= render "task_errors"%>
    <h1 class = "text-6xl text-blue-800 tracking-widest my-2"><%= @category.category_name%></h1>
    <%= form_with scope: :task, model: [@category, @task], method: :put, local: true, class:"bg-blue-200 shadow-lg p-5 rounded-lg" do |f|%>
        <%= render "form", f: f%>
    <% end %>
</section>