<div>
    <%= f.label :title, 'Title', class:"text-blue-800 text-4xl tracking-wider"%><br>
    <%= f.text_field :title, class: 'title-input'%>
</div>
<div>
    <%= f.label :description,'Description', class:"text-blue-800 text-4xl tracking-wider" %><br>
    <%= f.text_area :description , size: '70x15', class: "resize-none"%>
</div>
<div class ="deadline">
    <%= f.label :deadline,'Deadline', class:"text-blue-800 text-4xl tracking-wider" %><br>
    <%= f.date_select :deadline%>
</div>

<div class= "mt-5">
    <%= f.check_box :completed, class: 'check-box'%>
    <%= f.label :completed, class: "text-blue-800"%>
</div>
                    
<div class = 'submit-btn my-5'>
    <%= f.submit 'Submit Task', class: "bg-green-400 py-2 px-4 rounded-lg text-gray-100 cursor-pointer hover:bg-white hover:text-green-400" %>
    <%= link_to 'Cancel', category_tasks_path(@category), method: :get, class: "p-2.5 rounded-lg shadow-md 
        bg-red-400 text-white cursor-pointer hover:bg-white hover:text-red-400"%>
</div>
