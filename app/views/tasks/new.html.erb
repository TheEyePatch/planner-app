<%= form_with scope: :task, model: [@category, @task], local: true do |f|%>
<%flash.each do |type, msg|%>
        <%msg.each do |message|%>
        <div>
            <%= message%>
        </div>
        <%end%>
    <%end%>
    <div>
        <%= f.label 'Title'%><br>
        <%= f.text_field :title, class: 'title-input'%>
    </div>
    <div>
        <%= f.label 'Description' %><br>
        <%= f.text_area :description , size: '80x20'%>
    </div>
    <div>
        <%= f.label 'Deadline' %><br>
        <%= f.date_select :deadline, size: '80x20'%>
    </div>
                
    <div class = 'submit-btn'>
        <%= f.submit 'Create Task', class: 'submit-button' %>
    </div>
<% end %>