
<%= f.label 'Category', class:"text-5xl my-2 font-big-shoulders text-blue-600 tracking-wider"%>
<%= f.text_field :name, class: "w-80 h-12 rounded-lg my-2 text-2xl p-2 my-4"%>
<%= f.submit class:"bg-indigo-400 w-80 my-2 p-2 rounded-xl shadow-md text-white cursor-pointer transform transition duration-500 ease-in-out hover:scale-105 hover:text-indigo-400 hover:bg-white"%>
<%= link_to 'Cancel', categories_path, method: :get, class:"bg-red-400 text-center w-80 my-2 p-2 rounded-xl shadow-md text-white cursor-pointer transform transition duration-500 ease-in-out hover:scale-105 hover:text-red-400 hover:bg-white"%>
