<section class ="new-category-template">
    <%= form_with scope: :category, url: categories_path, local: true, class:"space-x-3" do |f|%>

        <%flash.each do |type, msg|%>
            <%msg.each do |message|%>
            <div>
                <%= message%>
            </div>
            <%end%>
        <%end%>

        <%= f.label 'Category', class:"text-6xl my-5 font-big-shoulders text-blue-600 transform -translate-x-5 tracking-wider"%>
        <div>
            <%= f.text_field :category_name, class: "w-4/12 rounded-lg"%>
            <%= f.submit class:"bg-indigo-400 p-2 rounded-xl shadow-md text-white cursor-pointer transform transition duration-500 ease-in-out hover:scale-105 hover:text-indigo-400 hover:bg-white"%>
        </div>
    <%end%>
</section>