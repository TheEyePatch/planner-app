<section class = 'content-container'>
    <% @categories.each do |category|%>
        <div class = 'category'>
           <h2><%= link_to category.category_name, category_path(category)%></h2>
            <h3><%= category.tasks.count%> Tasks</h3>
            <%= link_to 'New Task', new_category_task_path(category)%>
            <%= link_to 'Show Tasks', category_tasks_path(category)%>
            <%= button_to 'Delete Category', category_path(category), method: :delete, data: {confirm: "Are you sure you want to delete #{category.category_name}?"}%>
        </div>
        
    <%end%>
    <div>
        <%= button_to 'New Category', new_category_path, method: :get%>
    </div>
</section>