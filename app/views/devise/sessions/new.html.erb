<div class="flex flex-col items-center">
  <p class="alert bg-red-400 text-red-800"><%= alert %></p>
</div>
<div class ="p-5 flex items-center justify-between">
  <figure>
  <%= image_tag 'mobile-encryption.gif', class: "h-45rem w-auto rounded-full mx-5"%>
  <h1 class = "font-big-shoulders text-blue-700 text-8xl left-5 cursor-pointer hover:text-blue-800 tracking-tighter text-center"><i class="fas fa-calendar-check"></i> REmindMe!</h1>
  </figure>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "bg-white shadow-md p-7 rounded-md text-xl mr-10"}) do |f| %>
    <h2 class = "text-3xl tracking-wider text-blue-800">Log in</h2>
    <div class="field my-2">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border border-black rounded p-2" %>
    </div>

    <div class="field my-2">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "border border-black rounded p-2" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions my-2 text-base">
      <%= f.submit "Log in", class: "my-1 p-2 bg-green-400 text-white rounded-md cursor-pointer transform transition duration-300 ease-in-out hover:scale-110" %><br>
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>