<div class = "flex justify-between items-center p-3">
  <div class = "fixed flex justify-center w-full top-0 left-0">
    <%= render "devise/shared/error_messages", resource: resource %>
  </div>
  <figure>
    <%= image_tag "forms-animate.svg", class: 'h-45rem ml-16'%>
  </figure>
  <div class = "mr-24">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "bg-white p-7 text-lg shadow rounded-t-md w-30rem" ,method: :put }) do |f| %>
        <h2 class = "text-4xl border-b-2 border-indigo-800 pb-2 text-blue-800">Edit <%= resource_name.to_s.humanize %></h2>
      <div class="field mt-5">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "w-full p-1 border-b-2 border-gray-600"%>
      </div>

      <div class="field mt-3">
        <%= f.label :first_name %><br />
        <%= f.text_field :first_name, autofocus: true, autocomplete: "email", class: "w-full p-1 border-b-2 border-gray-600" %>
      </div>

      <div class="field mt-3">
        <%= f.label :last_name %><br />
        <%= f.text_field :last_name, autofocus: true, autocomplete: "email", class: "w-full p-1 border-b-2 border-gray-600" %>
      </div>


      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field mt-3">
        <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full p-1 border-b-2 border-gray-600" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="field mt-3">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full p-1 border-b-2 border-gray-600" %>
      </div>

      <div class="field mt-3 pb-3">
        <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full p-1 border-b-2 border-gray-600" %>
      </div>

      <div class="actions mt-3">
        <%= f.submit "Update", class: "cursor-pointer w-full bg-green-400 text-white p-1 rounded-md font-rubik transform transition-all hover:bg-transparent hover:shadow hover:text-green-400" %>
        <%= link_to "Back", categories_path , class: "w-full text-center block mt-2 p-1 cursor-pointer bg-blue-500 text-white rounded-md font-rubik transform transition-all hover:bg-transparent hover:shadow hover:text-blue-400"%>
      </div>

    <% end %>
    <div class = "text-lg text-blue-800 text-base bg-white px-7 pb-7 pt-2 rounded-b-md shadow-md border-t border-blue-800">
        Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete , class:"p-1 bg-red-400 text-white cursor-pointer rounded-md transform transition-all 
        hover:scale-105 hover:bg-white hover:shadow hover:text-red-400"%>
    </div>
  </div>
</div>